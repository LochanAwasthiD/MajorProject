<%layout("/layouts/boilerplate.ejs")%>

<div class=" main row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListing) { %>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card" style="width: 20rem">
      <img
        src="<%=listing.image%>"
        class="card-img-top"
        style="height: 30rem"
        alt="allListing_image"
      />
      <div class="card-body">
        <p class="card-text "><b>Title: <%=listing.title%></b></p>
        <p>$<%=listing.price.toLocaleString("en-US")%>/night</p>
        <p>Locations: <%=listing.location%></p>
        <p>Country: <%=listing.country%></p>
      </div>
    </div>
    <%}%>
  </a>
</div>
